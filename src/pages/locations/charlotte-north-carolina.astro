    ],
    "serviceType": [
      "Charlotte SEO Services",
      "Charlotte Web Development",
      "Banking SEO Charlotte",
      "Healthcare SEO Charlotte",
      "Manufacturing SEO Charlotte"
    ],
    "priceRange": "$$$",
    "openingHours": "Mo-Fr 08:00-18:00",
    "sameAs": [
      "https://github.com/isaacbenyakar",
      "https://linkedin.com/in/isaacbenyakar"
