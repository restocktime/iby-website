{
  "name": "interactive-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test --reporter=html",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:accessibility": "playwright test e2e/tests/accessibility.spec.ts",
    "test:performance": "playwright test e2e/tests/performance.spec.ts",
    "test:visual": "playwright test e2e/tests/visual-regression.spec.ts",
    "test:all": "npm run test:ci && npm run test:e2e",
    "playwright:install": "playwright install",
    "deploy": "./scripts/deploy.sh",
    "deploy:prod": "./scripts/deploy.sh --production",
    "deploy:preview": "./scripts/deploy.sh",
    "validate:prod": "node scripts/validate-production.js",
    "lighthouse": "lighthouse https://isaacbenyakar.com --output=json --output-path=./lighthouse-report.json --chrome-flags=\"--headless --no-sandbox\"",
    "analyze": "ANALYZE=true npm run build",
    "health-check": "curl -f http://localhost:3000/api/health-check || exit 1",
    "audit:security": "node scripts/security-audit.js",
    "audit:performance": "node scripts/performance-audit.js",
    "audit:bundle": "node scripts/analyze-bundle.js",
    "audit:cross-browser": "node scripts/cross-browser-test.js",
    "audit:full": "npm run audit:security && npm run audit:performance && npm run audit:bundle",
    "optimize": "npm run analyze && npm run lighthouse && npm run audit:performance"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.14.0",
    "@react-three/drei": "^10.7.2",
    "@react-three/fiber": "^9.3.0",
    "@sentry/nextjs": "^10.5.0",
    "@sentry/webpack-plugin": "^4.1.1",
    "@supabase/supabase-js": "^2.55.0",
    "@tanstack/react-query": "^5.85.3",
    "@vercel/blob": "^1.1.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "next-auth": "^4.24.11",
    "prisma": "^6.14.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "recharts": "^3.1.2",
    "three": "^0.179.1",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.179.0",
    "chromatic": "^13.1.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^30.0.5",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "lighthouse": "^12.8.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "web-vitals": "^5.1.0"
  }
}
