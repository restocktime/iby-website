---
import Layout from '../../components/layout/Layout.astro';
import { projects } from '../../data/projects.ts';

const project = projects.find(p => p.id === 'hsg-nationwide');
---

<Layout 
  title="HSG Nationwide Case Study"
  description="Enterprise analytics platform with custom reporting and data visualization for large-scale business intelligence."
>
  <div class="pt-8">
    <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-emerald-900 py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white">HSG Nationwide</h1>
          <p class="text-xl md:text-2xl text-slate-300 mb-8">Enterprise Analytics & Business Intelligence</p>
          
          <!-- Live Website Preview -->
          <div class="bg-slate-800 p-4 rounded-xl mb-8">
            <div class="aspect-video bg-slate-700 rounded-lg flex items-center justify-center mb-4">
              <iframe 
                src="https://hsgnationwide.com" 
                class="w-full h-full rounded-lg"
                title="HSG Nationwide Live Preview"
                sandbox="allow-scripts allow-same-origin"
              ></iframe>
            </div>
            <p class="text-slate-300 text-sm">Live platform preview - <a href="https://hsgnationwide.com" target="_blank" rel="noopener" class="text-blue-400 hover:text-blue-300">Visit hsgnationwide.com</a></p>
          </div>
        </div>
      </div>
    </section>
    
    <section class="bg-slate-900 py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-white text-center">Enterprise Business Intelligence</h2>
          
          <div class="grid md:grid-cols-2 gap-12">
            <div>
              <h3 class="text-2xl font-bold mb-4 text-emerald-400">The Challenge</h3>
              <p class="text-slate-300 mb-6">
                Large enterprise needed a scalable analytics platform to process massive 
                datasets, generate custom reports, and provide real-time insights across 
                multiple business units and regions.
              </p>
              
              <h3 class="text-2xl font-bold mb-4 text-blue-400">The Solution</h3>
              <p class="text-slate-300">
                Developed a comprehensive business intelligence platform with advanced 
                analytics, interactive visualizations, and multi-tenant architecture 
                for enterprise-scale deployment.
              </p>
            </div>
            
            <div class="bg-slate-800 p-8 rounded-xl">
              <h3 class="text-xl font-bold mb-6 text-green-400">Performance Metrics</h3>
              <div class="space-y-4">
                <div class="flex justify-between items-center">
                  <span class="text-slate-300">Data Processing Speed</span>
                  <span class="text-green-400 font-bold">+500%</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-slate-300">Report Generation Time</span>
                  <span class="text-green-400 font-bold">-85%</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-slate-300">Decision Making Speed</span>
                  <span class="text-green-400 font-bold">+200%</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="mt-12 grid md:grid-cols-2 gap-8">
            <div class="bg-slate-800 p-6 rounded-xl">
              <h3 class="text-xl font-bold mb-4 text-emerald-400">Platform Capabilities</h3>
              <ul class="text-slate-300 space-y-2">
                <li>• Custom report generation</li>
                <li>• Interactive data visualizations</li>
                <li>• Real-time data processing</li>
                <li>• Multi-tenant architecture</li>
                <li>• Advanced filtering & segmentation</li>
                <li>• API-first architecture</li>
              </ul>
            </div>
            
            <div class="bg-slate-800 p-6 rounded-xl">
              <h3 class="text-xl font-bold mb-4 text-purple-400">Technologies Used</h3>
              <div class="flex flex-wrap gap-2">
                <span class="bg-slate-700 text-slate-300 px-3 py-1 rounded-full text-sm">React</span>
                <span class="bg-slate-700 text-slate-300 px-3 py-1 rounded-full text-sm">Python</span>
                <span class="bg-slate-700 text-slate-300 px-3 py-1 rounded-full text-sm">PostgreSQL</span>
                <span class="bg-slate-700 text-slate-300 px-3 py-1 rounded-full text-sm">D3.js</span>
                <span class="bg-slate-700 text-slate-300 px-3 py-1 rounded-full text-sm">AWS</span>
                <span class="bg-slate-700 text-slate-300 px-3 py-1 rounded-full text-sm">Redis</span>
              </div>
            </div>
          </div>
          
          <div class="text-center mt-12">
            <a href="/contact" class="bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-4 rounded-lg font-semibold transition-colors">
              Scale Your Analytics Platform
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>