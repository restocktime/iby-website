  description="Thank you for reaching out. I'll get back to you within 24 hours."
>
  <div class="pt-8">
    <!-- Success Section -->
    <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-blue-900 py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto text-center">
          <div class="text-6xl mb-6">âœ…</div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent">
            Thank You, {name}!
          </h1>
          <p class="text-xl text-slate-300 mb-8">
            I've received your message and will get back to you within 24 hours.
          </p>
          
